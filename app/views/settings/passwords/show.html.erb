<h1>Password</h1>

<hr>

<%= form_with model: Current.user, url: settings_password_path do |form| %>
    <% if form.object.errors.any? %>
        <div>Error: <%= form.object.errors.full_messages.first %></div>
    <% end %>

    <div>
        <%= form.label :password_challenge %><br>
        <%= form.password_field :password_challenge, required: true, autocomplete: "current-password" %><br><br>
    </div>

    <div>
        <%= form.label :password %><br>
        <%= form.password_field :password, required: true, autocomplete: "new-password" %><br><br>
    </div>

    <div>
        <%= form.label :password_confirmation %><br>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password" %><br><br>
    </div>

    <div>
        <%= form.submit "Update password" %>
    </div>
<% end %>